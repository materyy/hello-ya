//动态二维数组：



#include<stdio.h>
#include<stdlib.h>
void main()
{
	int n1,n2;
	int **array,i,j;
	puts("输入一维长度：");
	scanf("%d",&n1);
	puts("输入二维长度：");
	scanf("%d",&n2);
	array=(int **)malloc(sizeof(int *)*n1);
	if(array==NULL)
	{
		puts("out of memory,press any key to quit...");
		exit(0);
	}
	for(i=0;i<n1;i++)
	{
		array[i]=(int *)malloc(sizeof(int)*n2);
		if(array[i]==NULL)
		{
			puts("out of mamory,press any key to quit...");
			exit(0);
		}
		for(j=0;j<n2;j++)
		{
			array[i][j]=i+j+1;
			printf("%d\t", array[i][j]);
		}
	printf("\n");
	}
	for(i=0;i<n1;i++)
		free(array[i]);
	free(array);
}
